doctype html
html
  head
    title ThreeJS Demo
    include includes/defaults.pug
  body
    .info Stuff
    div#blocker
      div#instructions
        span
          | Click to play
          | (W, A, S, D = Move, SPACE = Jump, MOUSE = Look around)
    canvas#renderer
    #ui
      .tiles
        input#voxel1(type="radio" name="voxel" value="1")
        label(for="voxel1" style="background-position:   -0% -0%")
        input#voxel2(type="radio" name="voxel" value="2")
        label(for="voxel2" style="background-position: -100% -0%")
        input#voxel3(type="radio" name="voxel" value="3")
        label(for="voxel3" style="background-position: -200% -0%")
        input#voxel4(type="radio" name="voxel" value="4")
        label(for="voxel4" style="background-position: -300% -0%")
        input#voxel5(type="radio" name="voxel" value="5")
        label(for="voxel5" style="background-position: -400% -0%")
        input#voxel6(type="radio" name="voxel" value="6")
        label(for="voxel6" style="background-position: -500% -0%")
        input#voxel7(type="radio" name="voxel" value="7")
        label(for="voxel7" style="background-position: -600% -0%")
        input#voxel8(type="radio" name="voxel" value="8")
        label(for="voxel8" style="background-position: -700% -0%")
      .tiles
        input#voxel9(type="radio" name="voxel" value="9")
